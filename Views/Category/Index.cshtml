@model IEnumerable<PersonalChallengePlatform.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Challenge Categories</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Category
        </a>
    </div>

    <!-- Categories Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title">@category.Name</h5>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <p class="card-text text-muted">
                            @(category.Description ?? "No description available")
                        </p>
                        <div class="mt-3">
                            <span class="badge bg-primary">
                                @category.Challenges?.Count() challenges
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <h4>No categories found</h4>
            <p class="text-muted">Create your first category to organize your challenges!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Create Category
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any necessary JavaScript for the categories view
    </script>
} 